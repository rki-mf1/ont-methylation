process {
    withLabel: minimap2     { cpus = params.cores; memory = params.memory } 
    withLabel: modkit       { cpus = params.cores; memory = { 4.GB * task.attempt }; maxRetries = 3 ; errorStrategy = { task.exitStatus in 130..140 ? 'retry' : 'terminate' } }
    withLabel: biopython    { cpus = 1; memory = '4 GB' }
}
